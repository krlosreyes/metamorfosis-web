---
// Navbar with glassmorphism effect
---

<nav
    class="fixed top-0 left-0 right-0 z-50 backdrop-blur-lg bg-white/70 border-b border-gray-200/50"
>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2">
                <img
                    src="/logoSite.png"
                    alt="Logo Metamorfosis Real"
                    class="h-25 w-auto"
                />
                <span class="font-bold text-xl hidden md:block"
                    >Metamorfosis Real</span
                >
            </a>

            <!-- Navigation Links -->
            <div class="hidden md:flex items-center space-x-8">
                <a
                    href="/#posts"
                    class="text-gray-700 hover:text-brand-blue transition-colors font-medium"
                >
                    Artículos
                </a>
                <a
                    href="/#about"
                    class="text-gray-700 hover:text-brand-blue transition-colors font-medium"
                >
                    Sobre Mí
                </a>
            </div>

            <!-- CTA Button -->
            <a
                href="https://app.metamorfosisvital.com.co/#/login"
                class="inline-flex relative z-10 items-center px-5 py-2.5 bg-emerald-500 bg-gradient-to-r from-[#00C49A] to-[#007BFF] text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200"
            >
                <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                    ></path>
                </svg>
                <span class="hidden sm:inline">ElenaApp</span>
                <span class="sm:hidden">App</span>
            </a>
        </div>
    </div>
</nav>

<!-- Spacer to prevent content from hiding under fixed navbar -->
<div class="h-16"></div>
