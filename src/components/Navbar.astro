---
// Navbar with glassmorphism effect
---

<nav
    class="fixed top-0 left-0 right-0 z-50 backdrop-blur-lg bg-white/70 border-b border-gray-200/50"
>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2">
                <img
                    src="/logoSite.png"
                    alt="Logo Metamorfosis Real"
                    class="h-10 w-auto"
                />
                <span class="font-bold text-xl hidden md:block"
                    >Metamorfosis Real</span
                >
            </a>

            <!-- Desktop Navigation Links -->
            <div class="hidden md:flex items-center space-x-8">
                <a
                    href="/#posts"
                    class="text-gray-700 hover:text-brand-blue transition-colors font-medium"
                >
                    Artículos
                </a>
                <a
                    href="/sobre-mi"
                    class="text-gray-700 hover:text-brand-blue transition-colors font-medium"
                >
                    Sobre Mí
                </a>
            </div>

            <div class="flex items-center gap-4">
                <!-- CTA Button -->
                <a
                    href="https://app.metamorfosisvital.com.co/#/login"
                    class="hidden sm:inline-flex relative z-10 items-center px-5 py-2.5 bg-emerald-500 bg-gradient-to-r from-[#00C49A] to-[#007BFF] text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                        ></path>
                    </svg>
                    <span>ElenaApp</span>
                </a>

                <!-- Mobile Menu Button -->
                <button
                    id="mobile-menu-btn"
                    class="md:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-brand-blue"
                    aria-label="Abrir menú"
                >
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu (Hidden by default) -->
    <div
        id="mobile-menu"
        class="hidden md:hidden bg-white border-t border-gray-100 absolute w-full left-0 shadow-lg"
    >
        <div class="px-4 pt-2 pb-6 space-y-2">
            <a
                href="/#posts"
                class="block px-3 py-3 rounded-md text-base font-medium text-gray-700 hover:text-brand-blue hover:bg-gray-50"
            >
                Artículos
            </a>
            <a
                href="/sobre-mi"
                class="block px-3 py-3 rounded-md text-base font-medium text-gray-700 hover:text-brand-blue hover:bg-gray-50"
            >
                Sobre Mí
            </a>
            <a
                href="https://app.metamorfosisvital.com.co/#/login"
                class="block px-3 py-3 rounded-md text-base font-medium text-[#007BFF] hover:bg-gray-50 font-bold"
            >
                Ir a ElenaApp
            </a>
        </div>
    </div>
</nav>

<!-- Spacer to prevent content from hiding under fixed navbar -->
<div class="h-16"></div>

<script>
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");

    if (btn && menu) {
        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });

        // Close menu when clicking a link
        menu.querySelectorAll("a").forEach((link) => {
            link.addEventListener("click", () => {
                menu.classList.add("hidden");
            });
        });

        // Close menu when clicking outside
        document.addEventListener("click", (event) => {
            const isClickInside =
                btn.contains(event.target as Node) ||
                menu.contains(event.target as Node);
            if (!isClickInside && !menu.classList.contains("hidden")) {
                menu.classList.add("hidden");
            }
        });
    }
</script>
